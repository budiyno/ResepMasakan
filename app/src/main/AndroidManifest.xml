<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.budi.resepmasakan">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/plate_rounded"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/plate_rounded"
        android:supportsRtl="true"
        android:theme="@style/Theme.ResepMasakan">
        <activity
            android:name=".ui.SplashActivity"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RecipeReaderActivity" />
        <activity android:name=".ui.category.ActivityCategory" />
        <activity android:name=".ui.detail.ActivityDetailRecipe" />
        <activity android:name=".HomeActivity"></activity>
    </application>

</manifest>